{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "bitar",
  "version": "0.0.1",
  "homepage": "https://github.com/ljishen/bitar",
  "description": "bitar is a library for accessing hardware compression/decompression accelerators",
  "builtin-baseline": "e162e68c7e5103d85f3599211bb1fe706964f553",
  "dependencies": [
    {
      "name": "magic-enum",
      "version>=": "0.8.0"
    },
    {
      "name": "fmt",
      "version>=": "8.1.1#1"
    },
    {
      "name": "curl",
      "version>=": "7.82.0",
      "default-features": true
    },
    {
      "name": "cxxopts",
      "version>=": "3.0.0"
    }
  ],
  "overrides": [
    {
      "$explanation": [
        "Need to pin the version used by system-installed Apache Arrow"
      ],
      "name": "openssl",
      "version-string": "1.1.1n#1"
    }
  ],
  "features": {
    "vcpkg-arrow": {
      "description": "Install Apache Arrow from vcpkg",
      "dependencies": [
        {
          "name": "arrow",
          "version>=": "7.0.0#2",
          "features": ["dataset", "parquet"],
          "default-features": false
        }
      ]
    },
    "system-arrow-deps": {
      "description": "Install dependencies for system-installed Apache Arrow",
      "dependencies": [
        "openssl",
        {
          "name": "re2",
          "version>=": "2021-11-01"
        },
        {
          "name": "c-ares",
          "version>=": "1.18.1#1"
        }
      ]
    },
    "tests": {
      "description": "Build the tests",
      "dependencies": [
        {
          "name": "catch2",
          "version>=": "2.13.9"
        }
      ]
    }
  }
}
